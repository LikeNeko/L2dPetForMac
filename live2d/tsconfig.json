{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "removeComments": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@framework/*": ["./Framework/src/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "Core/*.ts"
  ],
  "exclude": [
    "dist"
  ]
}
