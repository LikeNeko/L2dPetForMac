{
  "manifest_version": 2,

  "name": "pet",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",
  "background": {
    "persistent": false,
    "scripts": ["bg.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "css": [],
      "js": [ "page.js"]
    }
  ],
  "permissions": [
      "history",
    "http://*/*","https://*/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}